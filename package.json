{
  "name": "auth-service",
  "version": "0.0.1",
  "main": "dist/index.js",
  "scripts": {
    "dev": "npx ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc",
    "lint": "eslint 'src/**/*.ts'",
    "lint:fix": "eslint 'src/**/*.ts' --fix",
    "format": "prettier --write 'src/**/*.ts'",
    "precommit": "lint-staged",
    "start": "node dist/index.js",
    "prisma": "prisma",
    "test:prepare-db": "psql $DATABASE_URL_FOR_SETUP -tc \"SELECT 1 FROM pg_database WHERE datname = 'authdb_test'\" | grep -q 1 || psql $DATABASE_URL_FOR_SETUP -c 'CREATE DATABASE authdb_test;'",
    "test": "env $(cat .env.test | xargs) npm run test:prepare-db && env $(cat .env.test | xargs) npx prisma migrate deploy && env $(cat .env.test | xargs) jest"
  },
  "dependencies": {
    "@fastify/sensible": "^6.0.3",
    "@prisma/client": "^6.3.0",
    "ajv-errors": "^1.0.1",
    "bcryptjs": "^2.4.3",
    "dotenv": "^16.4.7",
    "fastify": "^5.2.1",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/ajv-errors": "^2.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.2",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-jest": "^28.11.0",
    "eslint-plugin-prettier": "^5.2.3",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "lint-staged": "^15.4.3",
    "prettier": "^3.4.2",
    "prisma": "^6.3.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.3"
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
